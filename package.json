{
  "name": "pikav",
  "version": "1.0.0",
  "description": "A collection of libraries and tools that help you build adaptive, accessible, and robust user experiences.",
  "files": [
    "dist"
  ],
  "main": "dist/client/esm/index.js",
  "module": "dist/client/esm/index.js",
  "types": "dist/client/types/index.d.ts",
  "exports": {
    "./solid-js": {
      "solid": "./dist/solid-js/source/index.jsx",
      "import": "./dist/solid-js/esm/index.js",
      "browser": "./dist/solid-js/esm/index.js",
      "require": "./dist/solid-js/esm/index.js",
      "node": "./dist/solid-js/esm/index.js"
    },
    ".": {
      "solid": "./dist/client/source/index.jsx",
      "import": "./dist/client/esm/index.js",
      "browser": "./dist/client/esm/index.js",
      "require": "./dist/client/esm/index.js",
      "node": "./dist/client/esm/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "solid-js": [
        "dist/solid-js/types/index.d.ts"
      ]
    }
  },
  "scripts": {
    "postversion": "cp -r package.json ..",
    "lint": "eslint '{packages,apps}/*/src/**/*.{js,ts,tsx}' --max-warnings=0 --no-ignore",
    "lint:fix": "pnpm lint -- --fix",
    "prepare": "node ./scripts/prepare.js"
  },
  "lint-staged": {
    "{packages,apps}/*/src/**/*.{js,ts,tsx}": [
      "eslint --fix --no-color --max-warnings=0 --no-ignore"
    ]
  },
  "peerDependencies": {
    "solid-js": "^1.3.14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timada-org/pikav-client-js.git"
  },
  "keywords": [],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/timada-org/pikav-client-js/issues"
  },
  "homepage": "https://github.com/timada-org/pikav-client-js#readme",
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.4",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-solid": "^0.4.6",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "semantic-release": "^19.0.2",
    "typescript": "^4.6.3"
  }
}
